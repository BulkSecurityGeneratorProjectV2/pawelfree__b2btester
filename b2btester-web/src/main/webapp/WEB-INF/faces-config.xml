<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <application>
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>i18n</var>
        </resource-bundle>
        <message-bundle>i18n</message-bundle>
        <locale-config>
            <default-locale>pl_PL</default-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>            
            <from-outcome>home.sign</from-outcome>
            <to-view-id>/sign.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>            
            <from-outcome>sign.home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>            
            <from-outcome>home.configuration</from-outcome>
            <to-view-id>/configuration.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>            
            <from-outcome>configuration.home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <factory>
        <exception-handler-factory>pl.bsb.b2btester.jsf.util.ExceptionHandlerFactory</exception-handler-factory>
    </factory>
</faces-config>
